{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",               // Use C++17 standard
                "-g",                       // Include debugging information
                "${file}",                  // The current file to compile
                "-o",                       // Output flag
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task to compile C++ files using g++"
        }
    ]
}